#include <WiFi.h>

const char* ssid = "iPhoneHotspot";
const char* password = "YOUR_WIFI_PASSWORD";
const int LEDPin = 26;

void connectWiFi() {
  Serial.println();
  Serial.println("‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠ WiFi...");
  Serial.print("SSID: ");
  Serial.println(ssid);

  WiFi.mode(WIFI_STA);
  WiFi.begin(ssid, password);

  unsigned long start = millis();
  const unsigned long timeoutMs = 20000;

  while (WiFi.status() != WL_CONNECTED && millis() - start < timeoutMs) {
    delay(500);
    Serial.print(".");
  }

  Serial.println();

  if (WiFi.status() == WL_CONNECTED) {
    Serial.println("‚úÖ ‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠ WiFi ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!");
    Serial.print("üì± IP Address: ");
    Serial.println(WiFi.localIP());
  } else {
    Serial.println("‚ùå ‡∏ï‡πà‡∏≠ WiFi ‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à‡πÉ‡∏ô 20 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ");
    Serial.print("WiFi status = ");
    Serial.println(WiFi.status());
  }
}

void setup() {
  Serial.begin(115200);

  pinMode(LEDPin, OUTPUT);
  digitalWrite(LEDPin, LOW);

  connectWiFi();

  Serial.println("\n=== ‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô ===");
  Serial.println("ON / OFF / STATUS");
}

void loop() {
  if (WiFi.status() != WL_CONNECTED) {
    connectWiFi();
  }

  if (Serial.available() > 0) {
    String command = Serial.readStringUntil('\n');
    command.trim();

    if (command == "ON") {
      digitalWrite(LEDPin, HIGH);
      Serial.println("üí° ‡πÄ‡∏õ‡∏¥‡∏î‡πÑ‡∏ü‡πÅ‡∏•‡πâ‡∏ß!");
    } else if (command == "OFF") {
      digitalWrite(LEDPin, LOW);
      Serial.println("üåô ‡∏õ‡∏¥‡∏î‡πÑ‡∏ü‡πÅ‡∏•‡πâ‡∏ß!");
    } else if (command == "STATUS") {
      Serial.print("‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡πÑ‡∏ü: ");
      Serial.println(digitalRead(LEDPin) == HIGH ? "‡πÄ‡∏õ‡∏¥‡∏î" : "‡∏õ‡∏¥‡∏î");
    } else {
      Serial.println("‚ùå ‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á");
    }
  }

  delay(100);
}
