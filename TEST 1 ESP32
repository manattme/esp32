#include <Arduino.h>

// ESP32 ‡πÄ‡∏õ‡∏¥‡∏î‡∏õ‡∏¥‡∏î‡πÑ‡∏ü‡∏ö‡πâ‡∏≤‡∏ô
// ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÇ‡∏î‡∏¢: [‡∏ä‡∏∑‡πà‡∏≠‡∏ô‡∏±‡∏Å‡πÄ‡∏£‡∏µ‡∏¢‡∏ô]

// ‡∏õ‡∏£‡∏∞‡∏Å‡∏≤‡∏®‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£ (‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡∏ö‡∏≠‡∏Å‡∏ß‡πà‡∏≤‡πÄ‡∏£‡∏≤‡∏°‡∏µ‡∏≠‡∏∞‡πÑ‡∏£‡∏ö‡πâ‡∏≤‡∏á)
const int relayPin = 19;  // ‡∏Ç‡∏≤ 15 ‡∏ï‡πà‡∏≠‡∏Å‡∏±‡∏ö Relay
const int ledPin = 26;     // ‡∏Ç‡∏≤ 2 ‡∏°‡∏µ LED ‡πÉ‡∏ô‡∏ï‡∏±‡∏ß

// ‡∏™‡πà‡∏ß‡∏ô‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ (‡∏ó‡∏≥‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡πÄ‡∏î‡∏µ‡∏¢‡∏ß)
void setup() {
  // 1. ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏Ç‡∏≤ GPIO
  pinMode(relayPin, OUTPUT);   // ‡∏Ç‡∏≤ relayPin ‡πÄ‡∏õ‡πá‡∏ô OUTPUT (‡∏™‡πà‡∏á‡∏™‡∏±‡∏ç‡∏ç‡∏≤‡∏ì‡∏≠‡∏≠‡∏Å)
  pinMode(ledPin, OUTPUT);     // ‡∏Ç‡∏≤ ledPin ‡πÄ‡∏õ‡πá‡∏ô OUTPUT
  
  // 2. ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡∏õ‡∏¥‡∏î‡πÑ‡∏ü
  digitalWrite(relayPin, HIGH);  // HIGH = ‡∏õ‡∏¥‡∏î‡∏£‡∏µ‡πÄ‡∏•‡∏¢‡πå
  digitalWrite(ledPin, LOW);     // LOW = ‡∏õ‡∏¥‡∏î LED
  
  // 3. ‡πÄ‡∏õ‡∏¥‡∏î Serial Monitor (‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏î‡∏π‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå)
  Serial.begin(115200);          // ‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß 115200
  Serial.println("‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö ESP32...");
  Serial.println("‡∏£‡∏≠ 5 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ ‡∏à‡∏∞‡πÄ‡∏õ‡∏¥‡∏î‡πÑ‡∏ü...");
  
  // 4. ‡∏£‡∏≠ 5 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
  delay(5000);  // 5000 ‡∏°‡∏¥‡∏•‡∏•‡∏¥‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ = 5 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
}

// ‡∏™‡πà‡∏ß‡∏ô‡∏ß‡∏ô‡∏•‡∏π‡∏õ (‡∏ó‡∏≥‡∏ã‡πâ‡∏≥‡∏ï‡∏•‡∏≠‡∏î)
void loop() {
  Serial.println("üîµ ‡πÄ‡∏õ‡∏¥‡∏î‡πÑ‡∏ü!");
  digitalWrite(relayPin, LOW);   // LOW = ‡πÄ‡∏õ‡∏¥‡∏î‡∏£‡∏µ‡πÄ‡∏•‡∏¢‡πå (‡πÑ‡∏ü‡∏ï‡∏¥‡∏î)
  digitalWrite(ledPin, HIGH);    // HIGH = ‡πÄ‡∏õ‡∏¥‡∏î LED ‡∏ö‡∏ô‡∏ö‡∏≠‡∏£‡πå‡∏î
  delay(3000);                   // ‡πÄ‡∏õ‡∏¥‡∏î‡∏Ñ‡πâ‡∏≤‡∏á‡πÑ‡∏ß‡πâ 3 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
  
  Serial.println("‚ö´ ‡∏õ‡∏¥‡∏î‡πÑ‡∏ü!");
  digitalWrite(relayPin, HIGH);  // HIGH = ‡∏õ‡∏¥‡∏î‡∏£‡∏µ‡πÄ‡∏•‡∏¢‡πå (‡πÑ‡∏ü‡∏î‡∏±‡∏ö)
  digitalWrite(ledPin, LOW);     // LOW = ‡∏õ‡∏¥‡∏î LED ‡∏ö‡∏ô‡∏ö‡∏≠‡∏£‡πå‡∏î
  delay(3000);                   // ‡∏õ‡∏¥‡∏î‡∏Ñ‡πâ‡∏≤‡∏á‡πÑ‡∏ß‡πâ 3 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
}
