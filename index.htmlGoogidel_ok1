<script>
    // =========================
    // System State
    // =========================
    let systemState = {
        running: false,
        emergency: false,
        speed: 50,
        defectRate: 15,
        partCounter: 0,
        goodCount: 0,
        badCount: 0,
        productionInterval: null,
        chartUpdateInterval: null,
        startTime: null,
        pollTimer: null
    };

    let chartData = {
        production: { time: [], good: [], bad: [] },
        quality: { time: [], rate: [] },
        defects: { scratch: 0, crack: 0, deform: 0, color: 0, size: 0 },
        oee: { time: [], value: [] }
    };

    // =========================
    // API Helpers
    // =========================
    async function apiGet(path) {
        const res = await fetch(path, { cache: 'no-store' });
        if (!res.ok) throw new Error(`HTTP ${res.status}`);
        return res;
    }

    function setPlcLed(num, on) {
        const led = document.getElementById(`led${num}`);
        if (led) led.classList.toggle('on', !!on);
    }

    function startStatusPolling() {
        if (systemState.pollTimer) clearInterval(systemState.pollTimer);
        systemState.pollTimer = setInterval(pollStatus, 400);
        pollStatus();
    }

    async function pollStatus() {
        try {
            const res = await apiGet('/status');
            const data = await res.json();

            systemState.running = !!data.running;
            systemState.emergency = !!data.emergency;

            document.getElementById('btnStart').disabled = systemState.running || systemState.emergency;
            document.getElementById('btnStop').disabled = !systemState.running;

            document.getElementById('conveyor').classList.toggle('running', systemState.running);
            document.getElementById('motor').classList.toggle('running', systemState.running);

            if (systemState.emergency) {
                document.getElementById('plcDisplay').textContent = 'E-STOP';
                document.getElementById('btnEmergency').classList.add('active');
                document.getElementById('led4').classList.add('error');
            } else {
                document.getElementById('btnEmergency').classList.remove('active');
                document.getElementById('led4').classList.remove('error');
                document.getElementById('plcDisplay').textContent = systemState.running ? 'RUNNING' : 'READY';
            }
        } catch (e) {
            document.getElementById('plcDisplay').textContent = 'OFFLINE';
        }
    }

    // =========================
    // Initialize
    // =========================
    document.addEventListener('DOMContentLoaded', function() {
        initializeCharts();
        updateDateTime();
        setInterval(updateDateTime, 1000);
        addAlert('info', '‡∏£‡∏∞‡∏ö‡∏ö‡∏û‡∏£‡πâ‡∏≠‡∏°', 'Smart Factory AI ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢‡πÅ‡∏•‡πâ‡∏ß');
        startStatusPolling();
    });

    function updateDateTime() {
        const now = new Date();
        const thaiMonths = ['‡∏°‡∏Å‡∏£‡∏≤‡∏Ñ‡∏°','‡∏Å‡∏∏‡∏°‡∏†‡∏≤‡∏û‡∏±‡∏ô‡∏ò‡πå','‡∏°‡∏µ‡∏ô‡∏≤‡∏Ñ‡∏°','‡πÄ‡∏°‡∏©‡∏≤‡∏¢‡∏ô','‡∏û‡∏§‡∏©‡∏†‡∏≤‡∏Ñ‡∏°','‡∏°‡∏¥‡∏ñ‡∏∏‡∏ô‡∏≤‡∏¢‡∏ô',
                           '‡∏Å‡∏£‡∏Å‡∏é‡∏≤‡∏Ñ‡∏°','‡∏™‡∏¥‡∏á‡∏´‡∏≤‡∏Ñ‡∏°','‡∏Å‡∏±‡∏ô‡∏¢‡∏≤‡∏¢‡∏ô','‡∏ï‡∏∏‡∏•‡∏≤‡∏Ñ‡∏°','‡∏û‡∏§‡∏®‡∏à‡∏¥‡∏Å‡∏≤‡∏¢‡∏ô','‡∏ò‡∏±‡∏ô‡∏ß‡∏≤‡∏Ñ‡∏°'];
        document.getElementById('currentTime').textContent =
            now.toLocaleTimeString('th-TH', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
        document.getElementById('currentDate').textContent =
            `${now.getDate()} ${thaiMonths[now.getMonth()]} ${now.getFullYear() + 543}`;
    }

    // =========================
    // Control Functions (Relay ‡∏à‡∏£‡∏¥‡∏á)
    // =========================
    async function startProduction() {
        if (systemState.emergency) {
            addAlert('danger', '‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÑ‡∏î‡πâ', '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏õ‡∏•‡∏î Emergency Stop ‡∏Å‡πà‡∏≠‡∏ô');
            return;
        }

        try {
            await apiGet('/start'); // Relay ‡∏à‡∏£‡∏¥‡∏á Pin 19
            systemState.running = true;
            systemState.startTime = Date.now();

            document.getElementById('btnStart').disabled = true;
            document.getElementById('btnStop').disabled = false;
            document.getElementById('conveyor').classList.add('running');
            document.getElementById('motor').classList.add('running');
            document.getElementById('plcDisplay').textContent = 'RUNNING';

            addAlert('success', '‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏Å‡∏≤‡∏£‡∏ú‡∏•‡∏¥‡∏ï', '‡∏™‡∏±‡πà‡∏á Relay PIN 19 ‡πÅ‡∏•‡πâ‡∏ß');
            producePartsLoop();
            startContinuousChartUpdates();
        } catch (e) {
            addAlert('danger', 'START ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à', '‡πÄ‡∏£‡∏µ‡∏¢‡∏Å /start ‡πÑ‡∏î‡πâ');
        }
    }

    async function stopProduction() {
        try {
            await apiGet('/stop'); // Relay ‡∏à‡∏£‡∏¥‡∏á Pin 18
            addAlert('info', '‡∏´‡∏¢‡∏∏‡∏î‡∏Å‡∏≤‡∏£‡∏ú‡∏•‡∏¥‡∏ï', '‡∏™‡∏±‡πà‡∏á Relay PIN 18 ‡πÅ‡∏•‡πâ‡∏ß');
        } catch (e) {
            addAlert('danger', 'STOP ‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à', '‡πÄ‡∏£‡∏µ‡∏¢‡∏Å /stop ‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ (‡πÅ‡∏ï‡πà‡∏´‡∏¢‡∏∏‡∏î‡∏´‡∏ô‡πâ‡∏≤‡πÄ‡∏ß‡πá‡∏ö‡πÉ‡∏´‡πâ‡πÅ‡∏•‡πâ‡∏ß)');
        }

        systemState.running = false;

        if (systemState.productionInterval) clearTimeout(systemState.productionInterval);
        if (systemState.chartUpdateInterval) {
            clearInterval(systemState.chartUpdateInterval);
            systemState.chartUpdateInterval = null;
        }

        document.getElementById('btnStart').disabled = false;
        document.getElementById('btnStop').disabled = true;
        document.getElementById('conveyor').classList.remove('running');
        document.getElementById('motor').classList.remove('running');
        document.getElementById('plcDisplay').textContent = 'STOPPED';
    }

    async function emergencyStop() {
        try {
            const res = await apiGet('/emergency'); // Relay ‡∏à‡∏£‡∏¥‡∏á Pin 23 (toggle)
            const txt = await res.text();

            systemState.emergency = !systemState.emergency;
            const btn = document.getElementById('btnEmergency');

            if (systemState.emergency) {
                systemState.running = false;
                if (systemState.productionInterval) clearTimeout(systemState.productionInterval);
                if (systemState.chartUpdateInterval) {
                    clearInterval(systemState.chartUpdateInterval);
                    systemState.chartUpdateInterval = null;
                }

                btn.classList.add('active');
                document.getElementById('plcDisplay').textContent = 'E-STOP';
                document.getElementById('led4').classList.add('error');
                document.getElementById('conveyor').classList.remove('running');
                document.getElementById('motor').classList.remove('running');
                document.getElementById('btnStart').disabled = true;
                document.getElementById('btnStop').disabled = true;

                addAlert('danger', '‡∏â‡∏∏‡∏Å‡πÄ‡∏â‡∏¥‡∏ô!', `‡∏™‡∏±‡πà‡∏á Relay PIN 23 ‡πÅ‡∏•‡πâ‡∏ß (${txt})`);
            } else {
                btn.classList.remove('active');
                document.getElementById('plcDisplay').textContent = 'READY';
                document.getElementById('led4').classList.remove('error');
                document.getElementById('btnStart').disabled = false;
                document.getElementById('btnStop').disabled = true;

                addAlert('success', '‡∏õ‡∏•‡∏î E-Stop', `‡∏£‡∏∞‡∏ö‡∏ö‡∏û‡∏£‡πâ‡∏≠‡∏°‡∏ó‡∏≥‡∏á‡∏≤‡∏ô (${txt})`);
            }
        } catch (e) {
            addAlert('danger', 'E-STOP ‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à', '‡πÄ‡∏£‡∏µ‡∏¢‡∏Å /emergency ‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ');
        }
    }

    function resetSystem() {
        stopProduction();

        systemState.running = false;
        systemState.emergency = false;
        systemState.speed = 50;
        systemState.defectRate = 15;
        systemState.partCounter = 0;
        systemState.goodCount = 0;
        systemState.badCount = 0;
        systemState.productionInterval = null;
        systemState.chartUpdateInterval = null;
        systemState.startTime = null;

        chartData = {
            production: { time: [], good: [], bad: [] },
            quality: { time: [], rate: [] },
            defects: { scratch: 0, crack: 0, deform: 0, color: 0, size: 0 },
            oee: { time: [], value: [] }
        };

        document.getElementById('goodCount').textContent = '0';
        document.getElementById('ngCount').textContent = '0';
        document.getElementById('totalParts').textContent = '0';
        document.getElementById('goodParts').textContent = '0';
        document.getElementById('defectParts').textContent = '0';
        document.getElementById('qualityRate').textContent = '100%';
        document.getElementById('productionRate').textContent = '0';
        document.getElementById('oeeValue').textContent = '0%';
        document.getElementById('plcDisplay').textContent = 'READY';

        setPlcLed(1, false); setPlcLed(2, false); setPlcLed(3, false);
        document.getElementById('btnEmergency').classList.remove('active');
        document.getElementById('led4').classList.remove('error');

        document.getElementById('speedSlider').value = 50;
        document.getElementById('defectSlider').value = 15;
        document.getElementById('speedValue').textContent = '50';
        document.getElementById('defectValue').textContent = '15';

        const gaugeFill = document.getElementById('gaugeFill');
        gaugeFill.style.strokeDashoffset = '471';

        initializeCharts();
        addAlert('info', '‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à', '‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡∏ñ‡∏π‡∏Å‡∏•‡πâ‡∏≤‡∏á‡πÅ‡∏•‡πâ‡∏ß');
    }

    function updateSpeed(value) {
        systemState.speed = parseInt(value);
        document.getElementById('speedValue').textContent = value;
    }

    function updateDefectRate(value) {
        systemState.defectRate = parseInt(value);
        document.getElementById('defectValue').textContent = value;
    }

    // =========================
    // Production Logic (Simulation UI)
    // =========================
    function producePartsLoop() {
        if (!systemState.running) return;

        producePart();

        const interval = 3000 / (systemState.speed / 50);
        systemState.productionInterval = setTimeout(producePartsLoop, interval);
    }

    function producePart() {
        systemState.partCounter++;
        const isGood = Math.random() * 100 > systemState.defectRate;

        const part = document.createElement('div');
        part.className = `part ${isGood ? 'good' : 'bad'}`;
        part.textContent = systemState.partCounter;
        part.style.left = '10%';
        part.dataset.quality = isGood ? 'good' : 'bad';

        document.getElementById('productionLine').appendChild(part);
        movePart(part, isGood);
    }

    function movePart(part, isGood) {
        let position = 10;
        const speed = systemState.speed / 50;

        const moveInterval = setInterval(() => {
            if (!systemState.running) {
                clearInterval(moveInterval);
                part.remove();
                return;
            }

            position += 0.35 * speed;
            part.style.left = position + '%';

            if (position > 20 && position < 21) triggerSensor(1);
            if (position > 48 && position < 49) { triggerSensor(2); inspectPart(isGood); }
            if (position > 76 && position < 77) { triggerSensor(3); sortPart(part, isGood); clearInterval(moveInterval); }

            if (position > 92) {
                clearInterval(moveInterval);
                part.remove();
            }
        }, 20);
    }

    // =========================
    // Sensor Trigger -> LED ‡∏à‡∏£‡∏¥‡∏á 0.7s
    // /trigger?s=1|2|3
    // s=1 => LED Pin 27
    // s=2 => LED Pin 26
    // s=3 => LED Pin 25
    // =========================
    function triggerSensor(num) {
        const sensor = document.getElementById(`sensor${num}`);
        sensor.classList.add('active');

        setPlcLed(num, true);

        fetch(`/trigger?s=${num}`).catch(() => {});

        setTimeout(() => {
            sensor.classList.remove('active');
            setPlcLed(num, false);
        }, 700);
    }

    function inspectPart(isGood) {
        const camera = document.getElementById('camera');
        camera.classList.add('scanning');

        setTimeout(() => {
            camera.classList.remove('scanning');

            if (!isGood) {
                const types = ['scratch', 'crack', 'deform', 'color', 'size'];
                chartData.defects[types[Math.floor(Math.random() * types.length)]]++;
            }
        }, 1000);

        const display = document.getElementById('plcDisplay');
        const originalText = display.textContent;
        display.textContent = isGood ? 'PASS ‚úì' : 'FAIL ‚úó';
        setTimeout(() => display.textContent = originalText, 1000);
    }

    function sortPart(part, isGood) {
        const actuator = isGood ? document.getElementById('actuatorGood') : document.getElementById('actuatorNG');
        actuator.classList.add('active');

        setTimeout(() => {
            if (isGood) {
                systemState.goodCount++;
                document.getElementById('goodCount').textContent = systemState.goodCount;
            } else {
                systemState.badCount++;
                document.getElementById('ngCount').textContent = systemState.badCount;
            }

            part.style.transition = 'all 0.9s cubic-bezier(0.34, 1.56, 0.64, 1)';
            part.style.left = '91%';
            part.style.top = isGood ? '68%' : '34%';
            part.style.transform = 'scale(0.45)';
            part.style.opacity = '0.15';

            setTimeout(() => actuator.classList.remove('active'), 600);
            setTimeout(() => part.remove(), 900);

            updateMetrics();
        }, 300);
    }

    function updateMetrics() {
        const total = systemState.goodCount + systemState.badCount;
        const quality = total > 0 ? (systemState.goodCount / total * 100).toFixed(1) : 100;

        document.getElementById('totalParts').textContent = total;
        document.getElementById('goodParts').textContent = systemState.goodCount;
        document.getElementById('defectParts').textContent = systemState.badCount;
        document.getElementById('qualityRate').textContent = quality + '%';

        if (systemState.startTime) {
            const elapsed = (Date.now() - systemState.startTime) / 1000 / 60;
            const rate = elapsed > 0 ? (total / elapsed).toFixed(1) : 0;
            document.getElementById('productionRate').textContent = rate;
        }

        const oee = (parseFloat(quality) * 0.94).toFixed(1);
        document.getElementById('oeeValue').textContent = oee + '%';
        updateOEEGauge(parseFloat(oee));

        updateCharts();

        if (quality < 70 && total > 10) {
            addAlert('danger', '‡∏Ñ‡∏∏‡∏ì‡∏†‡∏≤‡∏û‡∏ï‡πà‡∏≥!', `‡∏Ñ‡∏∏‡∏ì‡∏†‡∏≤‡∏û‡∏•‡∏î‡∏•‡∏á‡πÄ‡∏´‡∏•‡∏∑‡∏≠ ${quality}%`);
        } else if (quality < 85 && total > 15 && total % 15 === 0) {
            addAlert('warning', '‡∏Ñ‡∏≥‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô', `‡∏Ñ‡∏∏‡∏ì‡∏†‡∏≤‡∏û‡∏≠‡∏¢‡∏π‡πà‡∏ó‡∏µ‡πà ${quality}%`);
        }
    }

    function updateOEEGauge(value) {
        const circle = document.getElementById('gaugeFill');
        const circumference = 471;
        const offset = circumference - (value / 100) * circumference;
        circle.style.strokeDashoffset = offset;
    }

    function startContinuousChartUpdates() {
        if (systemState.chartUpdateInterval) clearInterval(systemState.chartUpdateInterval);

        systemState.chartUpdateInterval = setInterval(() => {
            if (systemState.running) {
                if (chartData.production.time.length > 0) updateChartsAnimation();
            }
        }, 1000);
    }

    // =========================
    // Charts
    // =========================
    function initializeCharts() {
        const realtimeConfig = {
            margin: { t: 20, r: 20, b: 40, l: 50 },
            paper_bgcolor: '#0a0e1a',
            plot_bgcolor: '#0f1419',
            font: {
                color: '#667eea',
                size: 11,
                family: 'Inter, SF Mono, sans-serif',
                weight: 600
            },
            xaxis: {
                title: { text: 'Time', font: { size: 10, color: '#00f5ff' } },
                gridcolor: 'rgba(0, 245, 255, 0.15)',
                showgrid: true,
                zeroline: false,
                color: '#00f5ff',
                linecolor: 'rgba(0, 245, 255, 0.3)',
                linewidth: 2
            },
            yaxis: {
                title: { text: 'Count', font: { size: 10, color: '#00f5ff' } },
                gridcolor: 'rgba(0, 245, 255, 0.15)',
                showgrid: true,
                zeroline: true,
                zerolinecolor: 'rgba(0, 245, 255, 0.25)',
                zerolinewidth: 2,
                color: '#00f5ff',
                linecolor: 'rgba(0, 245, 255, 0.3)',
                linewidth: 2
            },
            showlegend: true,
            legend: {
                x: 0.02,
                y: 0.98,
                bgcolor: 'rgba(10, 14, 26, 0.9)',
                bordercolor: 'rgba(0, 245, 255, 0.5)',
                borderwidth: 2,
                font: { size: 10, color: '#00f5ff', family: 'Inter, SF Mono' }
            },
            hovermode: 'x unified'
        };

        Plotly.newPlot('chartProduction', [
            {
                x: [],
                y: [],
                name: '‚úì GOOD',
                type: 'bar',
                marker: { color: '#00ff88', line: { color: '#00cc66', width: 2 } },
                text: [],
                textposition: 'outside',
                textfont: { color: '#00ff88', size: 10, family: 'SF Mono' },
                hovertemplate: '<b>GOOD</b><br>Count: %{y}<extra></extra>'
            },
            {
                x: [],
                y: [],
                name: '‚úó NG',
                type: 'bar',
                marker: { color: '#ff0055', line: { color: '#cc0044', width: 2 } },
                text: [],
                textposition: 'outside',
                textfont: { color: '#ff0055', size: 10, family: 'SF Mono' },
                hovertemplate: '<b>NG</b><br>Count: %{y}<extra></extra>'
            }
        ], {
            ...realtimeConfig,
            barmode: 'group',
            bargap: 0.2,
            bargroupgap: 0.1
        }, { responsive: true, displayModeBar: false });

        Plotly.newPlot('chartQuality', [{
            x: [], y: [],
            name: 'QUALITY',
            type: 'scatter',
            mode: 'lines',
            line: { color: '#00d9ff', width: 4, shape: 'spline', smoothing: 1.3 },
            fill: 'tozeroy',
            fillcolor: 'rgba(0, 217, 255, 0.25)'
        }], {
            ...realtimeConfig,
            yaxis: { ...realtimeConfig.yaxis, title: {text: 'Quality %', font: {size: 10, color: '#00f5ff'}}, range: [0,100] }
        }, { responsive: true, displayModeBar: false });

        Plotly.newPlot('chartDefects', [{
            type: 'barpolar',
            r: [0,0,0,0,0],
            theta: ['üî¥ Scratch', 'üü† Crack', 'üü° Deform', 'üü£ Color', 'üîµ Size'],
            name: 'DEFECTS',
            marker: {
                colors: ['#ff0055', '#ff6b00', '#ffd000', '#c800ff', '#00d9ff'],
                line: { color: 'rgba(0, 245, 255, 0.8)', width: 3 }
            },
            hovertemplate: '<b>%{theta}</b><br>Count: %{r}<extra></extra>'
        }], {
            margin: { t: 15, r: 15, b: 15, l: 15 },
            paper_bgcolor: '#0a0e1a',
            font: { color: '#00f5ff', size: 11, family: 'Inter, SF Mono', weight: 600 },
            polar: {
                bgcolor: '#0f1419',
                radialaxis: {
                    gridcolor: 'rgba(0, 245, 255, 0.15)',
                    color: '#00f5ff',
                    linecolor: 'rgba(0, 245, 255, 0.3)',
                    linewidth: 2,
                    tickfont: { size: 9 }
                },
                angularaxis: {
                    gridcolor: 'rgba(0, 245, 255, 0.15)',
                    color: '#00f5ff',
                    linecolor: 'rgba(0, 245, 255, 0.3)',
                    linewidth: 2,
                    tickfont: { size: 10 }
                }
            },
            showlegend: false
        }, { responsive: true, displayModeBar: false });

        Plotly.newPlot('chartOEE', [{
            x: [], y: [],
            name: 'OEE',
            type: 'scatter',
            mode: 'lines',
            line: { color: '#a855f7', width: 4, shape: 'spline', smoothing: 1.3 },
            fill: 'tozeroy',
            fillcolor: 'rgba(168, 85, 247, 0.25)'
        }], {
            ...realtimeConfig,
            yaxis: { ...realtimeConfig.yaxis, title: {text: 'OEE %', font: {size: 10, color: '#00f5ff'}}, range: [0,100] }
        }, { responsive: true, displayModeBar: false });
    }

    function updateCharts() {
        const timestamp = new Date().toLocaleTimeString('th-TH', { hour: '2-digit', minute: '2-digit', second: '2-digit' });

        chartData.production.time.push(timestamp);
        chartData.production.good.push(systemState.goodCount);
        chartData.production.bad.push(systemState.badCount);

        if (chartData.production.time.length > 20) {
            chartData.production.time.shift();
            chartData.production.good.shift();
            chartData.production.bad.shift();
        }

        Plotly.animate('chartProduction', {
            data: [
                { x: chartData.production.time, y: chartData.production.good, text: chartData.production.good.map(v => v > 0 ? v : ''), textposition: 'outside' },
                { x: chartData.production.time, y: chartData.production.bad,  text: chartData.production.bad.map(v => v > 0 ? v : ''),  textposition: 'outside' }
            ]
        }, { transition: { duration: 300, easing: 'cubic-in-out' }, frame: { duration: 300 } });

        const quality = systemState.goodCount + systemState.badCount > 0
            ? (systemState.goodCount / (systemState.goodCount + systemState.badCount) * 100)
            : 100;

        chartData.quality.time.push(timestamp);
        chartData.quality.rate.push(quality);

        if (chartData.quality.time.length > 20) {
            chartData.quality.time.shift();
            chartData.quality.rate.shift();
        }

        Plotly.animate('chartQuality', {
            data: [{ x: chartData.quality.time, y: chartData.quality.rate }]
        }, { transition: { duration: 300, easing: 'cubic-in-out' }, frame: { duration: 300 } });

        Plotly.animate('chartDefects', {
            data: [{
                r: [
                    chartData.defects.scratch || 0,
                    chartData.defects.crack || 0,
                    chartData.defects.deform || 0,
                    chartData.defects.color || 0,
                    chartData.defects.size || 0
                ]
            }]
        }, { transition: { duration: 300, easing: 'cubic-in-out' }, frame: { duration: 300 } });

        const oeeValue = parseFloat(document.getElementById('oeeValue').textContent);
        chartData.oee.time.push(timestamp);
        chartData.oee.value.push(oeeValue);

        if (chartData.oee.time.length > 20) {
            chartData.oee.time.shift();
            chartData.oee.value.shift();
        }

        Plotly.animate('chartOEE', {
            data: [{ x: chartData.oee.time, y: chartData.oee.value }]
        }, { transition: { duration: 300, easing: 'cubic-in-out' }, frame: { duration: 300 } });
    }

    function updateChartsAnimation() {
        if (chartData.production.time.length > 0) {
            Plotly.animate('chartProduction', {
                data: [
                    { x: chartData.production.time, y: chartData.production.good, text: chartData.production.good.map(v => v > 0 ? v : ''), textposition: 'outside' },
                    { x: chartData.production.time, y: chartData.production.bad,  text: chartData.production.bad.map(v => v > 0 ? v : ''),  textposition: 'outside' }
                ]
            }, { transition: { duration: 200, easing: 'linear' }, frame: { duration: 200 } });
        }

        if (chartData.quality.time.length > 0) {
            Plotly.animate('chartQuality', {
                data: [{ x: chartData.quality.time, y: chartData.quality.rate }]
            }, { transition: { duration: 200, easing: 'linear' }, frame: { duration: 200 } });
        }

        if (chartData.oee.time.length > 0) {
            Plotly.animate('chartOEE', {
                data: [{ x: chartData.oee.time, y: chartData.oee.value }]
            }, { transition: { duration: 200, easing: 'linear' }, frame: { duration: 200 } });
        }
    }

    // =========================
    // Alerts
    // =========================
    function addAlert(type, title, message) {
        const container = document.getElementById('alertsContainer');
        const alert = document.createElement('div');
        alert.className = `alert ${type}`;
        alert.innerHTML = `
            <div class="alert-title">${title}</div>
            <div class="alert-message">${message}</div>
        `;

        container.insertBefore(alert, container.firstChild);

        setTimeout(() => {
            alert.style.animation = 'slideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1) reverse';
            setTimeout(() => alert.remove(), 500);
        }, 7000);

        while (container.children.length > 5) container.lastChild.remove();
    }
</script>

</body>
</html>
