    <script>
        // ====================== ESP32 CONFIG ======================
        // ‚ö†Ô∏è ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô IP ‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô IP ‡∏à‡∏£‡∏¥‡∏á‡∏Ç‡∏≠‡∏á ESP32 ‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì
        const ESP32_IP = "172.20.10.3";
        let esp32Connected = false;
        let esp32Data = {
            running: false,
            s1: false,      // Sensor 1 (Entry) ‡∏à‡∏£‡∏¥‡∏á
            s2: false,      // Sensor 2 (Vision) ‡∏à‡∏£‡∏¥‡∏á  
            s3: false,      // Sensor 3 (Sort) ‡∏à‡∏£‡∏¥‡∏á
            r1: false,      // Relay 1 (S1) ‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞
            r2: false,      // Relay 2 (S2) ‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞
            r3: false       // Relay 3 (S3) ‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞
        };

        // System State (Dashboard Simulation)
        let systemState = {
            running: false,
            emergency: false,
            speed: 50,
            defectRate: 15,
            partCounter: 0,
            goodCount: 0,
            badCount: 0,
            productionInterval: null,
            chartUpdateInterval: null,
            startTime: null
        };

        let chartData = {
            production: { time: [], good: [], bad: [] },
            quality: { time: [], rate: [] },
            defects: { scratch: 0, crack: 0, deform: 0, color: 0, size: 0 },
            oee: { time: [], value: [] }
        };

        // ====================== ESP32 COMMUNICATION ======================

        // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡πÑ‡∏õ ESP32
        async function sendToESP32(command) {
            try {
                const response = await fetch(`http://${ESP32_IP}/${command}`, {
                    timeout: 3000
                });
                
                if (response.ok) {
                    const result = await response.text();
                    console.log(`‚úÖ ESP32 ${command}:`, result);
                    return true;
                }
            } catch (error) {
                console.error(`‚ùå ESP32 ${command} failed:`, error);
                addAlert('danger', 'Connection Error', `Cannot connect to ESP32 at ${ESP32_IP}`);
                esp32Connected = false;
                
                // ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó UI ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏´‡∏•‡∏∏‡∏î
                document.getElementById('led1').classList.remove('on');
                document.getElementById('plcDisplay').textContent = 'OFFLINE';
            }
            return false;
        }

        // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏à‡∏≤‡∏Å ESP32
        async function fetchESP32Status() {
            try {
                const response = await fetch(`http://${ESP32_IP}/status`, {
                    timeout: 2000
                });
                
                if (response.ok) {
                    const data = await response.json();
                    esp32Data = data;
                    esp32Connected = true;
                    
                    // ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó LED ‡∏ö‡∏ô Dashboard (‡πÅ‡∏™‡∏î‡∏á‡∏ß‡πà‡∏≤ ESP32 Online)
                    document.getElementById('led1').classList.add('on');
                    document.getElementById('plcDisplay').textContent = data.running ? 'RUNNING' : 'READY';
                    document.getElementById('esp32IP').textContent = ESP32_IP;
                    
                    // ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó Sensor ‡∏ö‡∏ô Dashboard ‡∏ï‡∏≤‡∏°‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏à‡∏£‡∏¥‡∏á
                    updateSensorsFromESP32();
                    
                    return true;
                }
            } catch (error) {
                console.log("‚ùå ESP32 Status fetch failed");
                esp32Connected = false;
                document.getElementById('led1').classList.remove('on');
                document.getElementById('plcDisplay').textContent = 'OFFLINE';
            }
            return false;
        }

        // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏° Relay ‡πÅ‡∏ï‡πà‡∏•‡∏∞‡∏ï‡∏±‡∏ß‡∏ö‡∏ô ESP32
        async function controlRelay(sensorNumber, turnOn) {
            const command = `/s${sensorNumber}/${turnOn ? 'on' : 'off'}`;
            const success = await sendToESP32(command);
            
            if (success) {
                // ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡πÉ‡∏ô‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£
                esp32Data[`r${sensorNumber}`] = turnOn;
                
                // ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó Sensor ‡∏ö‡∏ô Dashboard ‡πÉ‡∏´‡πâ‡∏™‡πà‡∏≠‡∏á‡πÅ‡∏™‡∏á
                const sensor = document.getElementById(`sensor${sensorNumber}`);
                if (turnOn) {
                    sensor.classList.add('active');
                } else {
                    sensor.classList.remove('active');
                }
                
                // ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó LED ‡∏ö‡∏ô PLC
                const led = document.getElementById(`led${sensorNumber + 1}`);
                if (turnOn) {
                    led.classList.add('on');
                } else {
                    led.classList.remove('on');
                }
            }
            return success;
        }

        // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠ ESP32
        async function checkESP32Connection() {
            const connected = await fetchESP32Status();
            if (connected) {
                addAlert('success', 'ESP32 Connected', `‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏Å‡∏±‡∏ö Smart Factory ‡∏ó‡∏µ‡πà ${ESP32_IP}`);
            } else {
                addAlert('warning', 'ESP32 Offline', `‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏ó‡∏µ‡πà ${ESP32_IP}`);
            }
            return connected;
        }

        // ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó Sensor ‡∏ö‡∏ô Dashboard ‡∏ï‡∏≤‡∏°‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏à‡∏≤‡∏Å ESP32
        function updateSensorsFromESP32() {
            // S1 (Entry) - ‡∏à‡∏£‡∏¥‡∏á
            const sensor1 = document.getElementById('sensor1');
            if (esp32Data.s1) {
                sensor1.classList.add('active');
            } else {
                sensor1.classList.remove('active');
            }
            
            // S3 (Sort) - ‡∏à‡∏£‡∏¥‡∏á
            const sensor3 = document.getElementById('sensor3');
            if (esp32Data.s3) {
                sensor3.classList.add('active');
            } else {
                sensor3.classList.remove('active');
            }
            
            // ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó LED ‡∏ö‡∏ô PLC
            for (let i = 1; i <= 3; i++) {
                const led = document.getElementById(`led${i + 1}`);
                if (esp32Data[`r${i}`]) {
                    led.classList.add('on');
                } else {
                    led.classList.remove('on');
                }
            }
        }

        // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏°‡∏î‡πâ‡∏ß‡∏¢‡∏°‡∏∑‡∏≠
        async function manualControl(sensorNumber) {
            if (!esp32Connected) {
                const connected = await checkESP32Connection();
                if (!connected) return;
            }
            
            // ‡∏™‡∏•‡∏±‡∏ö‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞ Relay
            const currentState = esp32Data[`r${sensorNumber}`];
            const success = await controlRelay(sensorNumber, !currentState);
            
            if (success) {
                addAlert('info', 'Manual Control', 
                    `Relay S${sensorNumber} ${!currentState ? '‡πÄ‡∏õ‡∏¥‡∏î' : '‡∏õ‡∏¥‡∏î'} ‡πÅ‡∏•‡πâ‡∏ß`);
            }
        }

        // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏≠‡πà‡∏≤‡∏ô Sensor ‡∏à‡∏£‡∏¥‡∏á
        async function readRealSensors() {
            if (!esp32Connected) {
                const connected = await checkESP32Connection();
                if (!connected) return;
            }
            
            await fetchESP32Status();
            
            // ‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡πÉ‡∏ô Alert
            addAlert('info', 'Sensor Status',
                `S1 (Entry): ${esp32Data.s1 ? '‡∏ï‡∏£‡∏ß‡∏à‡∏à‡∏±‡∏ö' : '‡∏ß‡πà‡∏≤‡∏á'} | S2 (Vision): ${esp32Data.s2 ? '‡∏ï‡∏£‡∏ß‡∏à‡∏à‡∏±‡∏ö' : '‡∏ß‡πà‡∏≤‡∏á'} | S3 (Sort): ${esp32Data.s3 ? '‡∏ï‡∏£‡∏ß‡∏à‡∏à‡∏±‡∏ö' : '‡∏ß‡πà‡∏≤‡∏á'}`);
        }

        // ====================== DASHBOARD FUNCTIONS ======================

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initializeCharts();
            updateDateTime();
            setInterval(updateDateTime, 1000);
            
            // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠ ESP32 ‡∏ó‡∏±‡∏ô‡∏ó‡∏µ
            setTimeout(() => {
                checkESP32Connection();
            }, 1000);
            
            addAlert('info', '‡∏£‡∏∞‡∏ö‡∏ö‡∏û‡∏£‡πâ‡∏≠‡∏°', 'Smart Factory AI ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢‡πÅ‡∏•‡πâ‡∏ß');
        });

        function updateDateTime() {
            const now = new Date();
            const thaiMonths = ['‡∏°‡∏Å‡∏£‡∏≤‡∏Ñ‡∏°','‡∏Å‡∏∏‡∏°‡∏†‡∏≤‡∏û‡∏±‡∏ô‡∏ò‡πå','‡∏°‡∏µ‡∏ô‡∏≤‡∏Ñ‡∏°','‡πÄ‡∏°‡∏©‡∏≤‡∏¢‡∏ô','‡∏û‡∏§‡∏©‡∏†‡∏≤‡∏Ñ‡∏°','‡∏°‡∏¥‡∏ñ‡∏∏‡∏ô‡∏≤‡∏¢‡∏ô',
                               '‡∏Å‡∏£‡∏Å‡∏é‡∏≤‡∏Ñ‡∏°','‡∏™‡∏¥‡∏á‡∏´‡∏≤‡∏Ñ‡∏°','‡∏Å‡∏±‡∏ô‡∏¢‡∏≤‡∏¢‡∏ô','‡∏ï‡∏∏‡∏•‡∏≤‡∏Ñ‡∏°','‡∏û‡∏§‡∏®‡∏à‡∏¥‡∏Å‡∏≤‡∏¢‡∏ô','‡∏ò‡∏±‡∏ô‡∏ß‡∏≤‡∏Ñ‡∏°'];
            document.getElementById('currentTime').textContent = 
                now.toLocaleTimeString('th-TH', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
            document.getElementById('currentDate').textContent = 
                `${now.getDate()} ${thaiMonths[now.getMonth()]} ${now.getFullYear() + 543}`;
        }

        // Control Functions
        async function startProduction() {
            if (systemState.emergency) {
                addAlert('danger', '‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÑ‡∏î‡πâ', '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏õ‡∏•‡∏î Emergency Stop ‡∏Å‡πà‡∏≠‡∏ô');
                return;
            }
            
            // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠ ESP32 ‡∏Å‡πà‡∏≠‡∏ô
            if (!esp32Connected) {
                const connected = await checkESP32Connection();
                if (!connected) {
                    addAlert('warning', 'ESP32 Offline', '‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏Å‡∏±‡∏ö ESP32 ‡πÑ‡∏î‡πâ');
                    return;
                }
            }
            
            // ‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡πÑ‡∏õ ESP32
            const success = await sendToESP32('start');
            if (!success) return;
            
            // ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡πÉ‡∏ô Dashboard
            systemState.running = true;
            systemState.startTime = Date.now();
            
            document.getElementById('btnStart').disabled = true;
            document.getElementById('btnStop').disabled = false;
            document.getElementById('conveyor').classList.add('running');
            document.getElementById('motor').classList.add('running');
            document.getElementById('plcDisplay').textContent = 'RUNNING';
            
            addAlert('success', '‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏Å‡∏≤‡∏£‡∏ú‡∏•‡∏¥‡∏ï', '‡∏£‡∏∞‡∏ö‡∏ö‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ó‡∏≥‡∏á‡∏≤‡∏ô');
            
            // ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥ (‡∏à‡∏≥‡∏•‡∏≠‡∏á)
            producePartsLoop();
            startContinuousChartUpdates();
        }

        async function stopProduction() {
            // ‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏´‡∏¢‡∏∏‡∏î‡πÑ‡∏õ ESP32
            if (esp32Connected) {
                await sendToESP32('stop');
            }
            
            // ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡πÉ‡∏ô Dashboard
            systemState.running = false;
            
            if (systemState.productionInterval) {
                clearTimeout(systemState.productionInterval);
            }
            
            if (systemState.chartUpdateInterval) {
                clearInterval(systemState.chartUpdateInterval);
                systemState.chartUpdateInterval = null;
            }
            
            document.getElementById('btnStart').disabled = false;
            document.getElementById('btnStop').disabled = true;
            document.getElementById('conveyor').classList.remove('running');
            document.getElementById('motor').classList.remove('running');
            document.getElementById('plcDisplay').textContent = 'STOPPED';
            
            addAlert('info', '‡∏´‡∏¢‡∏∏‡∏î‡∏Å‡∏≤‡∏£‡∏ú‡∏•‡∏¥‡∏ï', '‡∏£‡∏∞‡∏ö‡∏ö‡∏´‡∏¢‡∏∏‡∏î‡∏ó‡∏≥‡∏á‡∏≤‡∏ô‡πÅ‡∏•‡πâ‡∏ß');
        }

        function startContinuousChartUpdates() {
            // Update charts every 1 second for smooth real-time animation
            if (systemState.chartUpdateInterval) {
                clearInterval(systemState.chartUpdateInterval);
            }
            
            systemState.chartUpdateInterval = setInterval(() => {
                if (systemState.running) {
                    // Force update charts even without new data for animation effect
                    const timestamp = new Date().toLocaleTimeString('th-TH', { 
                        hour: '2-digit', 
                        minute: '2-digit', 
                        second: '2-digit' 
                    });
                    
                    // Only update if we have data
                    if (chartData.production.time.length > 0) {
                        updateChartsAnimation();
                    }
                }
            }, 1000); // Update every second
        }

        async function emergencyStop() {
            systemState.emergency = !systemState.emergency;
            const btn = document.getElementById('btnEmergency');
            
            if (systemState.emergency) {
                // ‡∏´‡∏¢‡∏∏‡∏î‡∏£‡∏∞‡∏ö‡∏ö‡πÉ‡∏ô Dashboard
                stopProduction();
                
                // Emergency Stop ‡πÉ‡∏ô ESP32 (‡∏™‡πà‡∏á /stop)
                if (esp32Connected) {
                    await sendToESP32('stop');
                }
                
                btn.classList.add('active');
                document.getElementById('plcDisplay').textContent = 'E-STOP';
                document.getElementById('led4').classList.add('error');
                addAlert('danger', '‡∏â‡∏∏‡∏Å‡πÄ‡∏â‡∏¥‡∏ô!', '‡∏£‡∏∞‡∏ö‡∏ö‡∏´‡∏¢‡∏∏‡∏î‡∏â‡∏∏‡∏Å‡πÄ‡∏â‡∏¥‡∏ô');
            } else {
                btn.classList.remove('active');
                document.getElementById('plcDisplay').textContent = 'READY';
                document.getElementById('led4').classList.remove('error');
                addAlert('success', '‡∏õ‡∏•‡∏î E-Stop', '‡∏£‡∏∞‡∏ö‡∏ö‡∏û‡∏£‡πâ‡∏≠‡∏°‡∏ó‡∏≥‡∏á‡∏≤‡∏ô‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á');
            }
        }

        async function resetSystem() {
            // ‡∏´‡∏¢‡∏∏‡∏î‡∏£‡∏∞‡∏ö‡∏ö‡πÉ‡∏ô Dashboard
            stopProduction();
            
            // ‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á reset ‡πÑ‡∏õ ESP32 (‡∏ñ‡πâ‡∏≤‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏≠‡∏¢‡∏π‡πà)
            if (esp32Connected) {
                await sendToESP32('stop'); // ‡∏õ‡∏¥‡∏î Relay ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
            }
            
            // ‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£
            systemState = {
                running: false,
                emergency: false,
                speed: 50,
                defectRate: 15,
                partCounter: 0,
                goodCount: 0,
                badCount: 0,
                productionInterval: null,
                chartUpdateInterval: null,
                startTime: null
            };
            
            chartData = {
                production: { time: [], good: [], bad: [] },
                quality: { time: [], rate: [] },
                defects: { scratch: 0, crack: 0, deform: 0, color: 0, size: 0 },
                oee: { time: [], value: [] }
            };
            
            // ‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞ ESP32
            esp32Data = {
                running: false,
                s1: false,
                s2: false, 
                s3: false,
                r1: false,
                r2: false,
                r3: false
            };
            
            document.getElementById('goodCount').textContent = '0';
            document.getElementById('ngCount').textContent = '0';
            document.getElementById('totalParts').textContent = '0';
            document.getElementById('goodParts').textContent = '0';
            document.getElementById('defectParts').textContent = '0';
            document.getElementById('qualityRate').textContent = '100%';
            document.getElementById('productionRate').textContent = '0';
            document.getElementById('oeeValue').textContent = '0%';
            document.getElementById('plcDisplay').textContent = esp32Connected ? 'READY' : 'OFFLINE';
            
            const gaugeFill = document.getElementById('gaugeFill');
            gaugeFill.style.strokeDashoffset = '471';
            
            if (systemState.emergency) {
                document.getElementById('btnEmergency').classList.remove('active');
                systemState.emergency = false;
                document.getElementById('led4').classList.remove('error');
            }
            
            initializeCharts();
            addAlert('info', '‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à', '‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡∏ñ‡∏π‡∏Å‡∏•‡πâ‡∏≤‡∏á‡πÅ‡∏•‡πâ‡∏ß');
        }

        function updateSpeed(value) {
            systemState.speed = parseInt(value);
            document.getElementById('speedValue').textContent = value;
        }

        function updateDefectRate(value) {
            systemState.defectRate = parseInt(value);
            document.getElementById('defectValue').textContent = value;
        }

        // Production Logic (Simulation)
        function producePartsLoop() {
            if (!systemState.running) return;
            
            producePart();
            
            const interval = 3000 / (systemState.speed / 50);
            systemState.productionInterval = setTimeout(producePartsLoop, interval);
        }

        function producePart() {
            systemState.partCounter++;
            const isGood = Math.random() * 100 > systemState.defectRate;
            
            const part = document.createElement('div');
            part.className = `part ${isGood ? 'good' : 'bad'}`;
            part.textContent = systemState.partCounter;
            part.style.left = '10%';
            part.dataset.quality = isGood ? 'good' : 'bad';
            
            document.getElementById('productionLine').appendChild(part);
            movePart(part, isGood);
        }

        async function movePart(part, isGood) {
            let position = 10;
            const speed = systemState.speed / 50;
            
            const moveInterval = setInterval(() => {
                if (!systemState.running) {
                    clearInterval(moveInterval);
                    part.remove();
                    return;
                }
                
                position += 0.35 * speed;
                part.style.left = position + '%';
                
                if (position > 20 && position < 21) {
                    triggerSensor(1);
                }
                
                if (position > 48 && position < 49) {
                    triggerSensor(2);
                    inspectPart(isGood);
                }
                
                if (position > 76 && position < 77) {
                    triggerSensor(3);
                    sortPart(part, isGood);
                    clearInterval(moveInterval);
                }
                
                if (position > 92) {
                    clearInterval(moveInterval);
                    part.remove();
                }
            }, 20);
        }

        async function triggerSensor(num) {
            // ‡∏ñ‡πâ‡∏≤‡πÄ‡∏õ‡πá‡∏ô S1 ‡∏´‡∏£‡∏∑‡∏≠ S3 ‡πÉ‡∏´‡πâ‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏° Relay ‡∏à‡∏£‡∏¥‡∏á‡∏ö‡∏ô ESP32
            if (num === 1 || num === 3) {
                // ‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡πÄ‡∏õ‡∏¥‡∏î Relay (‡∏ó‡∏≥‡∏á‡∏≤‡∏ô 0.5 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ)
                await controlRelay(num, true);
                
                // ‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏ö‡∏ô Dashboard
                const sensor = document.getElementById(`sensor${num}`);
                sensor.classList.add('active');
                
                // LED ‡∏ö‡∏ô PLC
                const led = document.getElementById(`led${num}`);
                led.classList.add('on');
                
                // ‡∏õ‡∏¥‡∏î Relay ‡∏´‡∏•‡∏±‡∏á‡∏à‡∏≤‡∏Å 0.5 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
                setTimeout(async () => {
                    await controlRelay(num, false);
                    sensor.classList.remove('active');
                    led.classList.remove('on');
                }, 500);
            } 
            // ‡∏ñ‡πâ‡∏≤‡πÄ‡∏õ‡πá‡∏ô S2 (Vision) ‡∏¢‡∏±‡∏á‡πÉ‡∏ä‡πâ‡πÅ‡∏ö‡∏ö‡∏à‡∏≥‡∏•‡∏≠‡∏á
            else if (num === 2) {
                const sensor = document.getElementById(`sensor${num}`);
                sensor.classList.add('active');
                setTimeout(() => sensor.classList.remove('active'), 700);
                
                const led = document.getElementById(`led${num}`);
                led.classList.add('on');
                setTimeout(() => led.classList.remove('on'), 700);
            }
        }

        function inspectPart(isGood) {
            const camera = document.getElementById('camera');
            camera.classList.add('scanning');
            
            setTimeout(() => {
                camera.classList.remove('scanning');
                
                if (!isGood) {
                    const types = ['scratch', 'crack', 'deform', 'color', 'size'];
                    chartData.defects[types[Math.floor(Math.random() * types.length)]]++;
                }
            }, 1000);
            
            const display = document.getElementById('plcDisplay');
            const originalText = display.textContent;
            display.textContent = isGood ? 'PASS ‚úì' : 'FAIL ‚úó';
            setTimeout(() => display.textContent = originalText, 1000);
        }

        function sortPart(part, isGood) {
            const actuator = isGood ? 
                document.getElementById('actuatorGood') : 
                document.getElementById('actuatorNG');
            
            actuator.classList.add('active');
            
            setTimeout(() => {
                if (isGood) {
                    systemState.goodCount++;
                    document.getElementById('goodCount').textContent = systemState.goodCount;
                } else {
                    systemState.badCount++;
                    document.getElementById('ngCount').textContent = systemState.badCount;
                }
                
                part.style.transition = 'all 0.9s cubic-bezier(0.34, 1.56, 0.64, 1)';
                part.style.left = '91%';
                part.style.top = isGood ? '68%' : '34%';
                part.style.transform = 'scale(0.45)';
                part.style.opacity = '0.15';
                
                setTimeout(() => actuator.classList.remove('active'), 600);
                setTimeout(() => part.remove(), 900);
                
                updateMetrics();
            }, 300);
        }

        function updateMetrics() {
            const total = systemState.goodCount + systemState.badCount;
            const quality = total > 0 ? (systemState.goodCount / total * 100).toFixed(1) : 100;
            
            document.getElementById('totalParts').textContent = total;
            document.getElementById('goodParts').textContent = systemState.goodCount;
            document.getElementById('defectParts').textContent = systemState.badCount;
            document.getElementById('qualityRate').textContent = quality + '%';
            
            if (systemState.startTime) {
                const elapsed = (Date.now() - systemState.startTime) / 1000 / 60;
                const rate = elapsed > 0 ? (total / elapsed).toFixed(1) : 0;
                document.getElementById('productionRate').textContent = rate;
            }
            
            const oee = (parseFloat(quality) * 0.94).toFixed(1);
            document.getElementById('oeeValue').textContent = oee + '%';
            updateOEEGauge(parseFloat(oee));
            
            // Update charts EVERY part for real-time effect
            updateCharts();
            
            if (quality < 70 && total > 10) {
                addAlert('danger', '‡∏Ñ‡∏∏‡∏ì‡∏†‡∏≤‡∏û‡∏ï‡πà‡∏≥!', `‡∏Ñ‡∏∏‡∏ì‡∏†‡∏≤‡∏û‡∏•‡∏î‡∏•‡∏á‡πÄ‡∏´‡∏•‡∏∑‡∏≠ ${quality}%`);
            } else if (quality < 85 && total > 15 && total % 15 === 0) {
                addAlert('warning', '‡∏Ñ‡∏≥‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô', `‡∏Ñ‡∏∏‡∏ì‡∏†‡∏≤‡∏û‡∏≠‡∏¢‡∏π‡πà‡∏ó‡∏µ‡πà ${quality}%`);
            }
        }

        function updateOEEGauge(value) {
            const circle = document.getElementById('gaugeFill');
            const circumference = 471;
            const offset = circumference - (value / 100) * circumference;
            circle.style.strokeDashoffset = offset;
        }

        // Charts - Real-time Animated Style
        function initializeCharts() {
            const realtimeConfig = {
                margin: { t: 20, r: 20, b: 40, l: 50 },
                paper_bgcolor: '#0a0e1a',
                plot_bgcolor: '#0f1419',
                font: { 
                    color: '#667eea', 
                    size: 11, 
                    family: 'Inter, SF Mono, sans-serif',
                    weight: 600
                },
                xaxis: { 
                    title: { text: 'Time', font: { size: 10, color: '#00f5ff' } },
                    gridcolor: 'rgba(0, 245, 255, 0.15)', 
                    showgrid: true,
                    zeroline: false,
                    color: '#00f5ff',
                    linecolor: 'rgba(0, 245, 255, 0.3)',
                    linewidth: 2
                },
                yaxis: { 
                    title: { text: 'Count', font: { size: 10, color: '#00f5ff' } },
                    gridcolor: 'rgba(0, 245, 255, 0.15)', 
                    showgrid: true,
                    zeroline: true,
                    zerolinecolor: 'rgba(0, 245, 255, 0.25)',
                    zerolinewidth: 2,
                    color: '#00f5ff',
                    linecolor: 'rgba(0, 245, 255, 0.3)',
                    linewidth: 2
                },
                showlegend: true,
                legend: {
                    x: 0.02,
                    y: 0.98,
                    bgcolor: 'rgba(10, 14, 26, 0.9)',
                    bordercolor: 'rgba(0, 245, 255, 0.5)',
                    borderwidth: 2,
                    font: { size: 10, color: '#00f5ff', family: 'Inter, SF Mono' }
                },
                hovermode: 'x unified'
            };
            
            // Chart 1: Production Bar Chart - Easier to count
            Plotly.newPlot('chartProduction', [
                {
                    x: [], 
                    y: [], 
                    name: '‚úì GOOD', 
                    type: 'bar',
                    marker: {
                        color: '#00ff88',
                        line: {
                            color: '#00cc66',
                            width: 2
                        }
                    },
                    text: [],
                    textposition: 'outside',
                    textfont: {
                        color: '#00ff88',
                        size: 10,
                        family: 'SF Mono'
                    },
                    hovertemplate: '<b>GOOD</b><br>Count: %{y}<extra></extra>'
                },
                {
                    x: [], 
                    y: [], 
                    name: '‚úó NG', 
                    type: 'bar',
                    marker: {
                        color: '#ff0055',
                        line: {
                            color: '#cc0044',
                            width: 2
                        }
                    },
                    text: [],
                    textposition: 'outside',
                    textfont: {
                        color: '#ff0055',
                        size: 10,
                        family: 'SF Mono'
                    },
                    hovertemplate: '<b>NG</b><br>Count: %{y}<extra></extra>'
                }
            ], {
                ...realtimeConfig,
                barmode: 'group',
                bargap: 0.2,
                bargroupgap: 0.1
            }, { responsive: true, displayModeBar: false });
            
            // Chart 2: Quality Signal - Pulsing Area
            Plotly.newPlot('chartQuality', [{
                x: [], y: [], 
                name: 'QUALITY',
                type: 'scatter', 
                mode: 'lines',
                line: { 
                    color: '#00d9ff', 
                    width: 4, 
                    shape: 'spline',
                    smoothing: 1.3
                },
                fill: 'tozeroy', 
                fillcolor: 'rgba(0, 217, 255, 0.25)'
            }], {
                ...realtimeConfig, 
                yaxis: {
                    ...realtimeConfig.yaxis, 
                    title: {text: 'Quality %', font: {size: 10, color: '#00f5ff'}}, 
                    range: [0, 100]
                }
            }, { responsive: true, displayModeBar: false });
            
            // Chart 3: Defect Radar - Animated Polar
            Plotly.newPlot('chartDefects', [{
                type: 'barpolar', 
                r: [0, 0, 0, 0, 0],
                theta: ['üî¥ Scratch', 'üü† Crack', 'üü° Deform', 'üü£ Color', 'üîµ Size'],
                name: 'DEFECTS',
                marker: {
                    colors: ['#ff0055', '#ff6b00', '#ffd000', '#c800ff', '#00d9ff'],
                    line: { color: 'rgba(0, 245, 255, 0.8)', width: 3 }
                },
                hovertemplate: '<b>%{theta}</b><br>Count: %{r}<extra></extra>'
            }], {
                margin: { t: 15, r: 15, b: 15, l: 15 },
                paper_bgcolor: '#0a0e1a',
                font: { 
                    color: '#00f5ff', 
                    size: 11, 
                    family: 'Inter, SF Mono',
                    weight: 600
                },
                polar: {
                    bgcolor: '#0f1419',
                    radialaxis: { 
                        gridcolor: 'rgba(0, 245, 255, 0.15)', 
                        color: '#00f5ff',
                        linecolor: 'rgba(0, 245, 255, 0.3)',
                        linewidth: 2,
                        tickfont: { size: 9 }
                    },
                    angularaxis: { 
                        gridcolor: 'rgba(0, 245, 255, 0.15)', 
                        color: '#00f5ff',
                        linecolor: 'rgba(0, 245, 255, 0.3)',
                        linewidth: 2,
                        tickfont: { size: 10 }
                    }
                },
                showlegend: false
            }, { responsive: true, displayModeBar: false });
            
            // Chart 4: OEE Pulse - Glowing Line
            Plotly.newPlot('chartOEE', [{
                x: [], y: [], 
                name: 'OEE',
                type: 'scatter', 
                mode: 'lines',
                line: { 
                    color: '#a855f7', 
                    width: 4, 
                    shape: 'spline',
                    smoothing: 1.3
                },
                fill: 'tozeroy', 
                fillcolor: 'rgba(168, 85, 247, 0.25)'
            }], {
                ...realtimeConfig,
                yaxis: {
                    ...realtimeConfig.yaxis, 
                    title: {text: 'OEE %', font: {size: 10, color: '#00f5ff'}}, 
                    range: [0, 100]
                }
            }, { responsive: true, displayModeBar: false });
        }

        function updateCharts() {
            const timestamp = new Date().toLocaleTimeString('th-TH', { 
                hour: '2-digit', 
                minute: '2-digit', 
                second: '2-digit' 
            });
            
            // Update Production Bar Chart
            chartData.production.time.push(timestamp);
            chartData.production.good.push(systemState.goodCount);
            chartData.production.bad.push(systemState.badCount);
            
            // Keep last 20 points for smooth animation
            if (chartData.production.time.length > 20) {
                chartData.production.time.shift();
                chartData.production.good.shift();
                chartData.production.bad.shift();
            }
            
            Plotly.animate('chartProduction', {
                data: [
                    {
                        x: chartData.production.time,
                        y: chartData.production.good,
                        text: chartData.production.good.map(v => v > 0 ? v : ''),
                        textposition: 'outside'
                    },
                    {
                        x: chartData.production.time,
                        y: chartData.production.bad,
                        text: chartData.production.bad.map(v => v > 0 ? v : ''),
                        textposition: 'outside'
                    }
                ]
            }, {
                transition: {
                    duration: 300,
                    easing: 'cubic-in-out'
                },
                frame: {
                    duration: 300
                }
            });
            
            // Update Quality Signal
            const quality = systemState.goodCount + systemState.badCount > 0 ? 
                (systemState.goodCount / (systemState.goodCount + systemState.badCount) * 100) : 100;
            
            chartData.quality.time.push(timestamp);
            chartData.quality.rate.push(quality);
            
            if (chartData.quality.time.length > 20) {
                chartData.quality.time.shift();
                chartData.quality.rate.shift();
            }
            
            Plotly.animate('chartQuality', {
                data: [{
                    x: chartData.quality.time,
                    y: chartData.quality.rate
                }]
            }, {
                transition: {
                    duration: 300,
                    easing: 'cubic-in-out'
                },
                frame: {
                    duration: 300
                }
            });
            
            // Update Defect Radar with animation
            Plotly.animate('chartDefects', {
                data: [{
                    r: [
                        chartData.defects.scratch || 0,
                        chartData.defects.crack || 0,
                        chartData.defects.deform || 0,
                        chartData.defects.color || 0,
                        chartData.defects.size || 0
                    ]
                }]
            }, {
                transition: {
                    duration: 300,
                    easing: 'cubic-in-out'
                },
                frame: {
                    duration: 300
                }
            });
            
            // Update OEE Pulse
            const oeeValue = parseFloat(document.getElementById('oeeValue').textContent);
            chartData.oee.time.push(timestamp);
            chartData.oee.value.push(oeeValue);
            
            if (chartData.oee.time.length > 20) {
                chartData.oee.time.shift();
                chartData.oee.value.shift();
            }
            
            Plotly.animate('chartOEE', {
                data: [{
                    x: chartData.oee.time,
                    y: chartData.oee.value
                }]
            }, {
                transition: {
                    duration: 300,
                    easing: 'cubic-in-out'
                },
                frame: {
                    duration: 300
                }
            });
        }

        function updateChartsAnimation() {
            // Animate existing data with smooth transitions
            if (chartData.production.time.length > 0) {
                Plotly.animate('chartProduction', {
                    data: [
                        {
                            x: chartData.production.time,
                            y: chartData.production.good,
                            text: chartData.production.good.map(v => v > 0 ? v : ''),
                            textposition: 'outside'
                        },
                        {
                            x: chartData.production.time,
                            y: chartData.production.bad,
                            text: chartData.production.bad.map(v => v > 0 ? v : ''),
                            textposition: 'outside'
                        }
                    ]
                }, {
                    transition: {
                        duration: 200,
                        easing: 'linear'
                    },
                    frame: {
                        duration: 200
                    }
                });
            }
            
            if (chartData.quality.time.length > 0) {
                Plotly.animate('chartQuality', {
                    data: [{
                        x: chartData.quality.time,
                        y: chartData.quality.rate
                    }]
                }, {
                    transition: {
                        duration: 200,
                        easing: 'linear'
                    },
                    frame: {
                        duration: 200
                    }
                });
            }
            
            if (chartData.oee.time.length > 0) {
                Plotly.animate('chartOEE', {
                    data: [{
                        x: chartData.oee.time,
                        y: chartData.oee.value
                    }]
                }, {
                    transition: {
                        duration: 200,
                        easing: 'linear'
                    },
                    frame: {
                        duration: 200
                    }
                });
            }
        }

        // Alerts
        function addAlert(type, title, message) {
            const container = document.getElementById('alertsContainer');
            const alert = document.createElement('div');
            alert.className = `alert ${type}`;
            alert.innerHTML = `
                <div class="alert-title">${title}</div>
                <div class="alert-message">${message}</div>
            `;
            
            container.insertBefore(alert, container.firstChild);
            
            setTimeout(() => {
                alert.style.animation = 'slideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1) reverse';
                setTimeout(() => alert.remove(), 500);
            }, 7000);
            
            while (container.children.length > 5) {
                container.lastChild.remove();
            }
        }
    </script>
</body>
</html>
